" Tab size {{{
set tabstop=2
set shiftwidth=2
set expandtab
" }}} Tab size
" Build options {{{ "
let s:root = expand('<sfile>:h').'/'
let &makeprg="python ".s:root."automation/Build_LLVM.py -t Ubuntu64 -b Debug --llvm-src=".s:root."llvm --llvm-install ".s:root."tmp_llvm_install"

" Get it from here: http://vim.wikia.com/wiki/Errorformats
" CMake Parser
" Call stack entries
let &efm = ' %#%f:%l %#(%m)'
" Start of multi-line error
let &efm .= ',%E' . 'CMake Error at %f:%l (message):'
" End of multi-line error
let &efm .= ',%Z' . 'Call Stack (most recent call first):'
" Continuation is message
let &efm .= ',%C' . ' %m'
" }}} Build options "
